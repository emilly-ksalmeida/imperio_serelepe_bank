generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id               String    @id @default(uuid())
  name             String    @db.VarChar(70)
  username         String    @unique @db.VarChar(20)
  passwordHash     String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  securityAnswer   String
  securityQuestion String    @db.VarChar(100)
  account          Accounts?
}

model Accounts {
  id                  String      @id(map: "Account_pkey") @default(nanoid(4))
  balance             Decimal     @default(0) @db.Decimal(20, 2)
  accountPasswordHash String
  idUser              String      @unique(map: "Account_idUser_key")
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  owner               Users       @relation(fields: [idUser], references: [id], map: "Account_idUser_fkey")

  sentTransfers Transfers[] @relation("FromAccount")
  receivedTransfers Transfers[] @relation("ToAccount")
}

model Transfers {
  id        String   @id @default(uuid())
  value     Decimal  @db.Decimal(20, 2)
  createdAt DateTime @default(now())
  fromId    String
  toId      String

  fromAccount Accounts @relation("FromAccount", fields: [fromId], references: [id])
  toAccount  Accounts @relation("ToAccount", fields: [toId], references: [id])

  @@index([fromId])
  @@index([toId])
}
